    <script>
        /* Toggle between adding and
        removing the "responive" clas to
        topnav when the user clicks on the icon */
       function myFunction() {
        var Home =
        document.getElementById("myTopnav");
        if  (topnav.className === "topnav") {
            topnav.clasName += " responsive";
        }  else{
        topnav.className = "topnav";

        }
       }
    </script>
    <script>
        let section= document.querySelectorAll('section');
        let Home = document.querySelectorAll('header nav a');

        window.oncroll = () => {
            section.forEach(sec =>{
            let top = window.scrollY;
            let offset = sec.offsetTop - 150;
            let height = sec.offsetHeight;
            let id = sec.getAttribute('id');

            if (top >= offet && top < offset + height) {
                Home.forEach(links => {
                    links.classList.remove('active');
                    document.querySelector('header nav a'
                    [href*=' + id +']),'lassList.add'
                    ('active');}
                );}
            }
        );}
    }
    </script>
    <script>
    const mytopnav =document.querySelectorAll
    ('.topnav');
    mytopnav.forEach((topnav) => {
        menuItems.addEventListener('click' , () => {
            const topnav=
            mytopnav.nextElementSibling;
            topnav.classList.toggle('show');

        });
    });
    </script>
    <script>
        const topnav= document.getElementById('topnav');
        topnav.addEventListener('click' , (e) =>{
            e.preventDefault();
            document.body.style.overflow ='hidden' ;
        });
        topnav.addEventListener
        ('mouseleave', () =>{
            document.body.style.overflow='auto';
        });

    </script>
    
   

